{
  "items_accordion" : {
    "type" : "Slice",
    "fieldset" : "FAQ",
    "description" : "Frequently asked questoins and their answers",
    "icon" : "format_list_bulleted",
    "display" : "list",
    "non-repeat" : {
      "faq" : {
        "type" : "Link",
        "config" : {
          "select" : "document",
          "customtypes" : [ "faq_item" ],
          "label" : "accordion"
        }
      },
      "faq_header" : {
        "type" : "StructuredText",
        "config" : {
          "single" : "heading2,heading3",
          "label" : "Accordion header",
          "placeholder" : "title"
        }
      },
      "faq_header_text" : {
        "type" : "StructuredText",
        "config" : {
          "multi" : "paragraph,strong,em,hyperlink",
          "label" : "Faq header text",
          "placeholder" : "FAQ header subtext"
        }
      }
    },
    "repeat" : {
      "faq_item_title" : {
        "type" : "StructuredText",
        "config" : {
          "single" : "heading2",
          "label" : "faq item title",
          "placeholder" : "Item title"
        }
      },
      "faq_item_content" : {
        "type" : "StructuredText",
        "config" : {
          "multi" : "paragraph,heading4,heading5,strong,em,hyperlink",
          "label" : "faq item content",
          "placeholder" : "faq content"
        }
      }
    }
  }
}